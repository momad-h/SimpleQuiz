<!doctype html>
<html lang="fa" dir="rtl">

<head>

    <!-- META DATA -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Sash – Bootstrap 5  Admin & Dashboard Template">
    <meta name="author" content="Spruko Technologies Private Limited">
    <meta name="keywords" content="admin,admin dashboard,admin panel,admin template,bootstrap,clean,dashboard,flat,jquery,modern,responsive,premium admin templates,responsive admin,ui,ui kit.">

    <!-- FAVICON -->
    <link rel="shortcut icon" type="image/x-icon" href="~/bootstrap/assets/images/brand/favicon.ico" />

    <!-- TITLE -->
    <title>Sash – Bootstrap 5 Admin & Dashboard Template</title>

    <!-- BOOTSTRAP CSS -->
    <link id="style" href="~/bootstrap/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- STYLE CSS -->
    <link href="~/bootstrap/assets/css/style.css" rel="stylesheet" />
    <link href="~/bootstrap/assets/css/dark-style.css" rel="stylesheet" />
    <link href="~/bootstrap/assets/css/transparent-style.css" rel="stylesheet">
    <link href="~/bootstrap/assets/css/skin-modes.css" rel="stylesheet" />

    <!--- FONT-ICONS CSS -->
    <link href="~/bootstrap/assets/css/icons.css" rel="stylesheet" />

    <!-- COLOR SKIN CSS -->
    <link id="theme" rel="stylesheet" type="text/css" media="all" href="~/bootstrap/assets/colors/color1.css" />

</head>

<body class="app sidebar-mini rtl login-img">

    <!-- BACKGROUND-IMAGE -->
    @RenderBody()
    <!-- BACKGROUND-IMAGE CLOSED -->
    <!-- JQUERY JS -->
    <script src="~/bootstrap/assets/js/jquery.min.js"></script>

    <!-- BOOTSTRAP JS -->
    <script src="~/bootstrap/assets/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/bootstrap/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- SHOW PASSWORD JS -->
    <script src="~/bootstrap/assets/js/show-password.min.js"></script>

    <!-- GENERATE OTP JS -->
    <script src="~/bootstrap/assets/js/generate-otp.js"></script>

    <!-- Perfect SCROLLBAR JS-->
    <script src="~/bootstrap/assets/plugins/p-scroll/perfect-scrollbar.js"></script>

    <!-- Color Theme js -->
    <script src="~/bootstrap/assets/js/themeColors.js"></script>

    <!-- SWEET-ALERT JS -->
    <script src="~/bootstrap/assets/plugins/sweet-alert/sweetalert.min.js"></script>
    <script src="~/bootstrap/assets/js/sweet-alert.js"></script>

    <!-- CUSTOM JS -->
    <script src="~/bootstrap/assets/js/custom.js"></script>

    <script src="~/js/scripts.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>